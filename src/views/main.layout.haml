!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    - if($meta_description)
      %meta(name="description" content=$meta_description)
    %title= $title
    %link(href="/css/bootstrap.min.css" rel="stylesheet")
    %link(href="/css/bootstrap-theme.min.css" rel="stylesheet")
    %link(href="/css/main.css")
    %link(href="https://fonts.googleapis.com/css?family=Eczar:600|Raleway:400,400i|Bree+Serif" rel="stylesheet")
    /[if IE]
      %script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
      %script(src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js")
    
    %script(src="/js/jquery-2.2.4.min.js")
    %script(src="/js/bootstrap.min.js")
  %body
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-83590106-1', 'auto');
      ga('send', 'pageview');
      //'
    #header.container-fluid{:style => "background: #eee url('/images/bg/stainless_steel.jpg') repeat fixed center; padding: 20px;"}
      .container
        .row
          .col-xs-12.col-sm-8.col-sm-offset-2
            %a(href="/")
              %image{:src => "/images/logo.png", :title => 'MAGLab Logo', :style => 'width: 100%;'}

      %nav.navbar.navbar-default{:style => 'margin-top: 25px;'}
        .container
          .navbar-header
            %button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#main-nav')
              Menu
              %span.glyphicon.glyphicon-menu-hamburger
          #main-nav.collapse.navbar-collapse
            %ul.nav.navbar-nav{:style => 'margin: 0 auto; display: table; table-layout: fixed; float: none;'}
              %li
                %a(href='/') Home
              %li
                %a(href='/membership') Membership
              %li
                %a(href='/wiki') Wiki
              %li
                %a(href='https://www.facebook.com/MAGLaboratory') Facebook
              %li
                %a(href='https://groups.google.com/forum/?fromgroups#!forum/maglaboratory') Forum / Mailing list
              %li
                %a(href='/hal') HAL
              %li
                %a(href='/members/procurement') Shopping List
              %li
                %a(href='/members') Members Dashboard
    :yield_content
